   def clear_callback(surf,rect):
   surf.fill(bg,rect)
   while True:
   for eventinpygame.event.get()
       if event.type==QUIT:   
           sys.exit()
       if event.type==KEYDOWNand
       event.key==K_ESCAPE:
       sys.exit()
   sprites.clear(screen,clear_callback)
   sprites.update()
   updates=sprites.draw(screen)
   pygame.display.update(updates)
   clock.tick(speed)        
